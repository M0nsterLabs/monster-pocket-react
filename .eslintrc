{
  "root": true,
  "parser": "babel-eslint",
  "extends": "standard",
  "plugins": [
    "standard",
    "promise",
    "react",
  ],
  "rules": {
    "no-multi-spaces": "off",
    "key-spacing": ["error", {
      "align": {
        "beforeColon": true,
        "afterColon": true,
        "on": "colon"
      }
    }],
    "no-return-assign": "off",
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "semi": [
      "error", "always"
    ]
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jasmine": true
  }
}
